{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "properties": {
                        "fetch_version": false
                    },
                    "style": "plain",
                    "template": "({{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }})",
                    "foreground": "white",
                    "type": "python"
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "style": "plain",
                    "template": "<blue>C: <b>{{ .Code }} </><#a2a2a2>@</> </b><green>{{ .UserName }} </>",
                    "type": "session"
                },
                {
                    "properties": {
                        "style": "full"
                    },
                    "style": "plain",
                    "template": "<#797979><b>in</b> </>{{ .Path }} ",
                    "foreground": "blue",
                    "type": "path"
                },
                {
                    "properties": {
                        "branch_icon": "",
                        "rebase_icon": "",
                        "commit_icon": "",
                        "fetch_stash_count": true,
                        "fetch_status": true,
                        "fetch_upstream_icon": true,
                        "fetch_worktree_count": true
                    },
                    "style": "diamond",
                    "template": "<blue>(</>{{ if .Detached }}{{ trunc -7 .HEAD }}{{ else }}{{ .HEAD }}{{ end }}<blue>)</>{{ if .Working.Changed }}<red> \uf044 {{ .Working.String }}</>{{ end }}<lightGreen>{{ if and (.Working.Changed) (.Staging.Changed) }}</>{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }}",
                    "foreground": "#ff8400",
                    "type": "git"
                },
                {
                    "properties": {
                        "fetch_version": true
                    },
                    "style": "plain",
                    "template": "\n{{ .Full }}",
                    "foreground": "green",
                    "type": "node"
                },
                {
                    "style": "plain",
                    "template": "<#797979> <b>and</b></> {{ .Full }} ",
                    "foreground": "red",
                    "type": "npm"
                }
            ],
            "newline": true
        },
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "style": "plain",
                    "template": "$",
                    "foreground": "#ffffff",
                    "type": "text"
                }
            ],
            "newline": true
        }
    ],
    "version": 3,
    "final_space": true
}
